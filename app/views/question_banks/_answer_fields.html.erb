<div class="nested-fields answer">
  <div class="field">
    <%= f.label :content, t(".content_answer"), class: "field-label answer-label" %>
    <%= f.text_field :content, class: "form-control field-input" %>
  </div>
  <div class="field">
    <%= f.label :correctness, t(".correct"), class: "field-label" %>
    <%= f.check_box :correctness, {}, "correct", "wrong" %>
  </div>

  <%= link_to_remove_association t(".remove_answer"), f %>
</div>
