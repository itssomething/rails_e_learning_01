<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for @question_bank do |f| %>
      <%= f.label :name, t(".name"), class: "field-label" %>
      <%= f.text_field :name, class: "form-control field-input" %>

      <%= f.label :category, t(".category"), class: "field-label" %>

      <h5><%= t ".add_question" %></h5>

      <div class = "fields">
        <%= f.fields_for :questions do |ff| %>
          <%= render "question", f: ff %>
        <% end %>
      </div>
      <div>
        <%= link_to_add_row(t(".add_question"), f, :questions, class: "btn btn-primary btn-small") %>
      </div>
      <div>
        <%= f.submit t(".submit"), class: "btn btn-primary btn-lg submit-button" %>
      </div>
    <% end %>
  </div>
